# Kometa Configuration
# Copy to config.yml and customize for your setup
# Documentation: https://metamanager.wiki/

plex:
  url: http://localhost:32400
  token: YOUR_PLEX_TOKEN
  timeout: 60
  clean_bundles: true
  empty_trash: true
  optimize: false

tmdb:
  apikey: YOUR_TMDB_API_KEY
  language: en
  region: US
  cache_expiration: 60

# Optional: TVDB (for some shows not on TMDB)
# tvdb:
#   apikey: YOUR_TVDB_API_KEY
#   language: eng

settings:
  cache: true
  cache_expiration: 60
  asset_folders: true
  asset_depth: 0
  create_asset_folders: false
  prioritize_assets: false
  dimensional_asset_rename: false
  download_url_assets: false
  show_missing_season_assets: false
  show_missing_episode_assets: false
  show_asset_not_needed: true
  sync_mode: append
  minimum_items: 1
  delete_below_minimum: false
  delete_not_scheduled: false
  run_again_delay: 2
  missing_only_released: false
  only_filter_missing: false
  show_unmanaged: true
  show_unconfigured: true
  show_filtered: false
  show_options: false
  show_missing: true
  show_missing_assets: true
  save_report: true
  tvdb_language: eng
  ignore_ids:
  ignore_imdb_ids:
  item_refresh_delay: 0
  playlist_sync_to_users: all
  playlist_exclude_users:
  playlist_report: false
  verify_ssl: true
  custom_repo:
  check_nightly: false

libraries:
  Movies:
    # Use Kometa defaults for common collections
    metadata_path:
      - pmm: basic
      - pmm: imdb
    overlay_path:
      - remove_overlays: false
      - pmm: resolution
      - pmm: audio_codec
    operations:
      split_duplicates: false
      assets_for_all: false

  TV Shows:
    metadata_path:
      - pmm: basic
      - pmm: imdb
    overlay_path:
      - remove_overlays: false
      - pmm: resolution
      - pmm: audio_codec
    operations:
      split_duplicates: false
      assets_for_all: false

# Optional: Webhooks for notifications
# webhooks:
#   error: https://discord.com/api/webhooks/...
#   version:
#   run_start:
#   run_end:
#   changes:
#   delete:
